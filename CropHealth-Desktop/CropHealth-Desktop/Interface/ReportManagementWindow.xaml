<Window x:Class="CropHealth_Desktop.Interface.ReportManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CropHealth_Desktop.Interface"
        mc:Ignorable="d"
        Title="Management Rapoarte" Height="750" Width="1500"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#30000000" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#f5f7fa" Offset="0"/>
                <GradientStop Color="#c3cfe2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ðŸ“Š Management Rapoarte" 
                          FontSize="28" FontWeight="Bold" 
                          Foreground="#2c3e50"
                          VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="â¬…ï¸ ÃŽnapoi" Click="BackButton_Click" 
                            Padding="12,8" Margin="0,0,10,0"
                            Background="#95a5a6" Foreground="White"
                            Style="{StaticResource ActionButton}"/>
                    <Button Content="ðŸ”„ ReÃ®ncarcÄƒ" Click="RefreshButton_Click" 
                            Padding="12,8" Margin="0,0,10,0"
                            Background="#3498db" Foreground="White"
                            Style="{StaticResource ActionButton}"/>
                    <Button Content="âž• AdaugÄƒ Raport" Click="AddReportButton_Click" 
                            Padding="12,8"
                            Background="#667eea" Foreground="White"
                            Style="{StaticResource ActionButton}"/>
                </StackPanel>
            </Grid>
            <!-- Search Box -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="ðŸ” CÄƒutare:" 
                          VerticalAlignment="Center" 
                          Margin="0,0,12,0" 
                          FontWeight="SemiBold"
                          FontSize="14"
                          Foreground="#34495e"/>
                <TextBox x:Name="SearchTextBox" 
                        Grid.Column="1"
                        Padding="12,10" 
                        FontSize="14"
                        TextChanged="SearchTextBox_TextChanged"
                        VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="8" Background="White">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.1"/>
                                            </Border.Effect>
                                            <ScrollViewer x:Name="PART_ContentHost" Margin="12,10"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>
        </Grid>

        <!-- Reports List -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                BorderThickness="0"
                Margin="0,0,0,20"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="#30000000" Direction="270" ShadowDepth="4" BlurRadius="12" Opacity="0.15"/>
            </Border.Effect>
            <DataGrid x:Name="ReportsDataGrid" 
                      BorderThickness="0"
                      Margin="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="50"/>
                <DataGridTextColumn Header="NDVI" Binding="{Binding ndviValue, StringFormat=F3}" Width="80"/>
                <DataGridTextColumn Header="TemperaturÄƒ (Â°C)" Binding="{Binding temperatureValue, StringFormat=F1}" Width="120"/>
                <DataGridTextColumn Header="PrecipitaÈ›ii (mm)" Binding="{Binding precipitationValue, StringFormat=F1}" Width="130"/>
                <DataGridTextColumn Header="Data Raport" Binding="{Binding reportDate, StringFormat=dd.MM.yyyy HH:mm}" Width="140"/>
                <DataGridTextColumn Header="LocaÈ›ie" Binding="{Binding location.name}" Width="150"/>
                <DataGridTextColumn Header="Latitudine" Binding="{Binding location.latitude, StringFormat=F4}" Width="100"/>
                <DataGridTextColumn Header="Longitudine" Binding="{Binding location.longitude, StringFormat=F4}" Width="100"/>
                <DataGridTextColumn Header="Utilizator" Binding="{Binding location.user.Username}" Width="120"/>
                <DataGridTextColumn Header="Email Utilizator" Binding="{Binding location.user.email}" Width="180"/>
                <DataGridTemplateColumn Header="AcÈ›iuni" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="âœï¸ EditeazÄƒ" Click="EditReport_Click" 
                                        Tag="{Binding}" 
                                        Padding="10,6" Margin="5,0"
                                        Background="#3498db" Foreground="White" 
                                        Cursor="Hand"
                                        Style="{StaticResource ActionButton}"/>
                                <Button Content="ðŸ—‘ï¸ È˜terge" Click="DeleteReport_Click" 
                                        Tag="{Binding}" 
                                        Padding="10,6" Margin="5,0"
                                        Background="#e74c3c" Foreground="White" 
                                        Cursor="Hand"
                                        Style="{StaticResource ActionButton}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#ECF0F1" 
                CornerRadius="6" 
                Padding="12,8"
                BorderThickness="0">
            <TextBlock x:Name="StatusTextBlock" 
                      Text="Gata" 
                      VerticalAlignment="Center"
                      FontSize="13"
                      Foreground="#34495e"/>
        </Border>
    </Grid>
    </Grid>
</Window>
