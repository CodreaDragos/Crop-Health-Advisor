<Window x:Class="CropHealth_Desktop.Interface.ReportFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CropHealth_Desktop.Interface"
        mc:Ignorable="d"
        Title="Adaugă/Editează Raport" Height="650" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="TitleTextBlock" Grid.Row="0" 
                   Text="Adaugă Raport Nou" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
            <StackPanel>
                <Label Content="Locație:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="LocationComboBox" Padding="8" Margin="0,0,0,15" 
                         DisplayMemberPath="name" 
                         SelectionChanged="LocationComboBox_SelectionChanged"/>
                
                <!-- Location Info (Read-only) -->
                <StackPanel x:Name="LocationInfoPanel" Margin="0,0,0,15" Visibility="Collapsed">
                    <Label Content="Informații Locație (Read-only):" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="LocationNameTextBlock" Margin="5,0,0,5" FontStyle="Italic"/>
                    <TextBlock x:Name="LocationCoordinatesTextBlock" Margin="5,0,0,5" FontStyle="Italic"/>
                    <TextBlock x:Name="LocationUserTextBlock" Margin="5,0,0,15" FontStyle="Italic"/>
                </StackPanel>

                <Label Content="NDVI Value:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="NdviValueTextBox" Padding="8" Margin="0,0,0,15"/>
                <TextBlock Text="Valoare între -1.0 și 1.0" FontSize="10" Foreground="Gray" Margin="0,-10,0,15"/>

                <Label Content="Temperatură (°C):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="TemperatureValueTextBox" Padding="8" Margin="0,0,0,15"/>
                <TextBlock Text="Valoare între -50°C și 60°C" FontSize="10" Foreground="Gray" Margin="0,-10,0,15"/>

                <Label Content="Precipitații (mm):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="PrecipitationValueTextBox" Padding="8" Margin="0,0,0,15"/>
                <TextBlock Text="Valoare pozitivă sau zero" FontSize="10" Foreground="Gray" Margin="0,-10,0,15"/>

                <Label Content="Interpretare AI:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="AiInterpretationTextBox" Padding="8" Margin="0,0,0,15" 
                        TextWrapping="Wrap" AcceptsReturn="True" 
                        MinHeight="100" VerticalScrollBarVisibility="Auto"/>

                <Label Content="Data Raport:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="ReportDateDatePicker" Padding="8" Margin="0,0,0,15"/>
                <TextBox x:Name="ReportTimeTextBox" Padding="8" Margin="0,0,0,15" 
                        Text="00:00" 
                        ToolTip="Ora în format HH:mm (ex: 14:30)"/>

                <TextBlock x:Name="ErrorTextBlock" 
                          Foreground="Red" 
                          TextWrapping="Wrap"
                          Margin="0,10,0,0"
                          Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button Content="Salvează" Click="SaveButton_Click" 
                    Padding="15,8" Margin="0,0,10,0"
                    Background="#667eea" Foreground="White" 
                    FontWeight="Bold" MinWidth="100"/>
            <Button Content="Anulează" Click="CancelButton_Click" 
                    Padding="15,8" MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>

